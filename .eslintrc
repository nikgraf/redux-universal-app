{
  "extends": "airbnb",
  "rules": {
    "comma-dangle": 0,
    "new-cap": [2, {
      "capIsNewExceptions": ["List", "Map"]
    }],
    "react/sort-comp": [2, {
      "order": [
        "constructor",
        "displayName",
        "propTypes",
        "contextTypes",
        "childContextTypes",
        "mixins",
        "statics",
        "defaultProps",
        "getDefaultProps",
        "getInitialState",
        "getChildContext",
        "componentWillMount",
        "componentDidMount",
        "componentWillReceiveProps",
        "shouldComponentUpdate",
        "componentWillUpdate",
        "componentDidUpdate",
        "componentWillUnmount",
        "/^_on.+$/",
        "/^_get.+$/",
        "/^_trigger.+$/",
        "/^_render.+$/",
        "render"
      ]
    }]
  }
}
